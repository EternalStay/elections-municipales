<form method="post" action="{{ path('parti_delete', {'id': parti.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette parti ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parti.id) }}">
    <button class="btn btn-outline-danger my-2">Supprimer</button>
</form>