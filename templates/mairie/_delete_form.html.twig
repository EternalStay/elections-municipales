<form method="post" action="{{ path('mairie_delete', {'id': mairie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette mairie ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mairie.id) }}">
    <button class="btn btn-outline-danger my-2">Supprimer</button>
</form>